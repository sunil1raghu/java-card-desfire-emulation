<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

<Button 
	android:id="@+id/balancesButton"
	android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dip"
    android:text="Balances"/>

<TextView
    android:id="@+id/label"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/balancesButton"
    android:layout_marginTop="70dip"
    android:editable="false"
    android:text="Type here:"/>
    
<EditText
    android:id="@+id/entry"
    android:layout_width="120dip"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background"
    android:layout_below="@id/label"/>
<Button
    android:id="@+id/addCredit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/entry"
    android:layout_alignTop="@id/entry"
    android:layout_alignBottom="@id/entry"
    android:layout_marginLeft="10dip"
    android:text="+" />
<Button
	android:id="@+id/subCredit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/addCredit"
    android:layout_alignTop="@id/entry"
    android:layout_alignBottom="@id/entry"
    android:text="-" />
<Button
	android:id="@+id/commit"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/entry"
    android:layout_marginTop="50dip"
    android:text="CommitTransaction" />
</RelativeLayout>